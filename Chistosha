  <script>
    // Плавное появление элементов при загрузке
    window.addEventListener('load', () => {
      document.getElementById('cardMain').classList.add('show');
      document.getElementById('cardSide').classList.add('show');
      document.querySelector('.card.appear-delay-3').classList.add('show');
      document.querySelector('footer').classList.add('show');
    });

    // Modal open/close
    const overlay = document.getElementById('overlay');
    const openOrder = document.getElementById('openOrder');
    const openOrderBtn = document.getElementById('openOrder');
    const closeModal = document.getElementById('closeModal');

    openOrderBtn.addEventListener('click', () => {
      overlay.style.display = 'flex';
      overlay.classList.add('show');
      overlay.setAttribute('aria-hidden','false');
    });

    closeModal.addEventListener('click', () => {
      overlay.style.display = 'none';
      overlay.classList.remove('show');
      overlay.setAttribute('aria-hidden','true');
    });

    overlay.addEventListener('click', (e) => {
      if(e.target === overlay){
        overlay.style.display = 'none';
        overlay.classList.remove('show');
        overlay.setAttribute('aria-hidden','true');
      }
    });

    // Parallax effect on scroll (subtle)
    const pageBg = document.getElementById('pageBg');
    const logoFloat = document.getElementById('logoFloat');
    window.addEventListener('scroll', () => {
      const sc = window.scrollY;
      // background moves slowly
      pageBg.style.transform = `translateY(${sc * -0.06}px)`;
      // floating logo moves a bit faster and slightly side-to-side
      logoFloat.style.transform = `translateY(${sc * 0.12}px) translateX(${Math.sin(sc/150)*6}px)`;
    });

    // small helpers
    document.getElementById('y').textContent = new Date().getFullYear();
  </script>
